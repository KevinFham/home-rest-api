{
    "name": "Home REST API Server",
    "version": "1.0.0",
    "description": "Central API server for controlling stuff at home",
    "type": "module",
    "engines": {
        "node": ">=18.x"
    },
    "main": "src/main.ts",
    "scripts": {
        "prepare": "ts-patch install -s",
        "dev": "NODE_ENV=development npx tsx watch .",
        "build": "rm -rf build && mkdir build && find src/ -name '*.yml' -exec cp --parents -t build {} \\; && mv build/src/* build/ && rmdir build/src && tspc -p tsconfig.json",
        "staging": "NODE_ENV=staging node build/main.js",
        "deploy": "NODE_ENV=production pm2 start build/main.js --name home-rest-api --cron-restart=\"0 5 * * *\""
    },
    "dependencies": {
        "@wesleytodd/openapi": "^1.1.0",
        "async-mutex": "^0.5.0",
        "child_process": "^1.0.2",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "glob": "^11.0.3",
        "yaml": "^2.8.1"
    },
    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.0",
        "ts-patch": "^3.3.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-transform-paths": "^3.5.5"
    }
}
